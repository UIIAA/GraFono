generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  name          String?
  role          String    @default("PROFESSIONAL") // PROFESSIONAL, PATIENT, ADMIN
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  // Relations
  notifications Notification[]
  patientProfile Patient?  @relation(name: "UserToPatient") // If this user is a patient
  templates     Template[]

  // Professional Profile
  digitalSignature String? // URL or Base64
  crfa             String? // Conselho Regional
  specialty        String? // Fonoaudiologia Educacional, etc.
  address          String? // Clinic Address for Header
}

model Template {
  id          String   @id @default(cuid())
  title       String
  content     String   // HTML/Rick Text
  category    String   // Atestado, Encaminhamento, Recibo, Contrato
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Patient {
  id            String    @id @default(cuid())
  name          String
  email         String?
  phone         String?
  gender        String    // Masculino, Feminino
  dateOfBirth   DateTime
  status        String    @default("Ativo") // Lead, Avaliação, Em Terapia, Em Espera, Alta, Arquivado
  imageUrl      String?
  startDate     DateTime  @default(now())
  
  // CRM Fields
  motherName    String?
  fatherName    String?
  address       String?
  observations  String?   // Notes/Observations
  negotiatedValue Float?  // Valor negociado mensal/sessão
  
  // Financial Specifics
  financialSource   String    @default("PARTICULAR") // PARTICULAR, CONVENIO
  insuranceName     String?
  insuranceNumber   String?
  authorizationStatus String? // Guia Pendente, Guia Autorizada
  
  // Reevaluation Cycle
  reevaluationInterval String?   // 3_MONTHS, 6_MONTHS, 1_YEAR, NONE
  lastReevaluation     DateTime?
  nextReevaluation     DateTime?
  responsibleEmail     String?

  // Relations
  userId        String?   @unique // Link to a User account for Portal access
  user          User?     @relation(name: "UserToPatient", fields: [userId], references: [id])
  
  appointments  Appointment[]
  reports       Report[]
  assessments   Assessment[]
  exams         Exam[]
  goals         Goal[]
  exercises     Exercise[]
  treatmentProgress TreatmentProgress[]
  transactions  Transaction[]
  history       PatientHistory[]
  knowledgeBase PatientKnowledgeBase[]
  evolutions    Evolution[]
  reminders     Reminder[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model PatientHistory {
  id        String   @id @default(cuid())
  content   String
  date      DateTime @default(now())

  patientId String
  patient   Patient  @relation(fields: [patientId], references: [id])

  createdAt DateTime @default(now())
}

model Transaction {
  id          String   @id @default(cuid())
  description String
  amount      Float
  type        String   // Old: avaliacao, tratamento. New: INCOME, EXPENSE? 
  // Let's keep 'type' for categorization like "Terapia", "Avaliação" for Incomes, or "Aluguel" for Expenses.
  
  flow        String   @default("INCOME") // INCOME, EXPENSE
  category    String?  // FIXED (Fixa), VARIABLE (Variável) - mostly for Expenses
  source      String?  // PARTICULAR, CONVENIO - mostly for Income
  
  status      String   // pago, pendente, atrasado, aguardando_repasse
  dueDate     DateTime
  paymentDate DateTime? // Used for "Single Click" settlement timestamp

  // Compliance List Fields
  referenceId       String?  // e.g. "MONTHLY_JAN_2025" or "APT_123"
  isMonthly         Boolean  @default(false)
  bankTransactionId String?  // For future bank integration

  patientId   String?
  patient     Patient? @relation(fields: [patientId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Appointment {
  id          String   @id @default(cuid())
  date        DateTime
  time        String?
  status      String   // Agendado, Realizado, Cancelado
  type        String   // Terapia, Avaliação, Consulta
  location    String   @default("Presencial") // Presencial, Online
  notes       String?
  
  patientId   String
  patient     Patient  @relation(fields: [patientId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Report {
  id          String   @id @default(cuid())
  title       String
  type        String   // Avaliação, Evolução
  status      String   // Finalizado, Rascunho
  date        DateTime
  content     String?  // HTML or JSON
  fileUrl     String?
  summary     String?  // AI Summary
  
  patientId   String
  patient     Patient  @relation(fields: [patientId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Evolution {
  id              String   @id @default(cuid())
  date            DateTime @default(now())
  type            String   // PARTICULAR, CONVENIO (Inherited or overridden)
  emotionalStatus String?  // Colaborativo, Resistente, Agitado, etc.
  content         String   // Rich Text / Speech-to-Text content
  fileUrl         String?  // Attachments
  
  // Relations
  patientId       String
  patient         Patient  @relation(fields: [patientId], references: [id])
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Assessment {
  id          String   @id @default(cuid())
  title       String? // e.g. "Avaliação Inicial"
  date        DateTime
  status      String   // Finalizada
  type        String   // Inicial, Progresso
  description String?
  metrics     String?  // JSON for detailed metrics
  fileUrl     String?
  summary     String?  // AI Summary
  
  patientId   String
  patient     Patient  @relation(fields: [patientId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Exam {
  id          String   @id @default(cuid())
  title       String   // e.g. Audiometria
  date        DateTime
  status      String   // Finalizado, Pendente, Agendado
  type        String?
  fileUrl     String?
  summary     String?  // AI Summary
  
  patientId   String
  patient     Patient  @relation(fields: [patientId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PatientKnowledgeBase {
  id          String   @id @default(cuid())
  type        String   // AVALIACAO, EXAME, RELATORIO, OBSERVACAO
  date        DateTime @default(now())
  content     String   // Full text or summary
  fileUrl     String?
  
  sourceId    String   // ID of the original record (Exam, Assessment, etc.)
  
  patientId   String
  patient     Patient  @relation(fields: [patientId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Goal {
  id          String   @id @default(cuid())
  description String
  progress    Int      @default(0)
  status      String   // Em andamento, Concluído
  
  patientId   String
  patient     Patient  @relation(fields: [patientId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Exercise {
  id          String   @id @default(cuid())
  title       String
  description String?
  frequency   String
  duration    String
  status      String   @default("Pendente")
  
  patientId   String
  patient     Patient  @relation(fields: [patientId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TreatmentProgress {
  id          String   @id @default(cuid())
  month       String   // e.g. "Jan 2024"
  attended    Int
  total       Int
  attendanceRate Float
  expected    Float?
  realized    Float?
  
  patientId   String
  patient     Patient  @relation(fields: [patientId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  title     String
  content   String
  type      String   // Payment, Schedule
  read      Boolean  @default(false)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now())
}

model AvailabilityConfig {
  id              String   @id @default(cuid())
  
  // Deprecated/Legacy fields (Keep for rollback safety until migration complete)
  workingDays     String   // JSON string of days [1, 2, 3, 4, 5]
  startHour       String   // "08:00"
  endHour         String   // "18:00"
  lunchStart      String?  // "12:00"
  lunchEnd        String?  // "13:00"
  
  // New Granular Availability
  // Format: [ { day: "MON", slots: [{ start: "08:00", end: "12:00" }] } ]
  timeSlots       String?  // JSON string
  
  sessionDuration Int      @default(30) // in minutes
  
  updatedAt       DateTime @updatedAt
}

model Reminder {
  id          String   @id @default(cuid())
  title       String
  description String?
  type        String   // RECIBO_GOV, GENERAL
  priority    String   @default("NORMAL") // LOW, NORMAL, HIGH
  
  dueDate     DateTime?
  isCompleted Boolean  @default(false)
  link        String?  // External link (e.g. Gov.br)
  
  // Relation to User (Professional)
  userId      String? 
  // Ideally relation to Patient too to link back?
  patientId   String?
  patient     Patient? @relation(fields: [patientId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Diagnosis {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  baseSeverity Int?    @default(5)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}